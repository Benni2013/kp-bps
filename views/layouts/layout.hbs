    <!-- ========== HEADER ========== -->
    <header class="sticky top-0 inset-x-0 flex flex-wrap md:justify-start md:flex-nowrap z-[48] w-full bg-white border-b text-sm py-2.5 lg:ps-[260px]">
  <nav class="px-4 sm:px-6 flex justify-between items-center w-full mx-auto">
    <div class="flex flex-col max-md:max-w-full">
      <div class="self-start font-black font-bold text-2xl py-1 italic">E-Voisy</div>
