<!-- Content -->
<main class="p-8">
    <div class="mb-8">
        <!-- Header Banner -->
        <div class="bg-green-400 p-6 rounded-lg mb-8 flex justify-between items-center">
            <div class="text-white">
                <h2 class="text-3xl font-bold mb-2">Pegawai Terbaik</h2>
                <p class="text-xl">{{pemilihanTitle}}</p>
            </div>
            <div class="text-white">
                <svg 
