<div class="flex flex-col lg:ml-10 lg:mt-12">
  <div class="flex flex-col mb-4">
    <h1 class="text-4xl font-bold">Terima Kasih Sudah Melakukan Voting!</h1>
    <p class="text-gray-500 italic mt-1">{{pemilihanTitle}}</p>
  </div>
  
  {{#if pesan}}
    <!-- Notifikasi Belum Bisa Dinilai -->
    <div class="mt-8 bg-gray-200 rounded-xl border border-gray-300 shadow-sm p-6 flex justify-center items-center h-[400px]">
      <p class="text-gray-600 text-xl font-medium">{{pesan}}</p>
    </div>
  {{else}}
    <p class="mt-4 text-lg leading-8">
      Silahkan download bukti voting di bawah ini.
    </p>

    <div class="mt-8 bg-white rounded-xl border border-gray-300 shadow-sm p-6">
      <!-- Tabel Informasi -->
      <table class="table-auto w-full border-collapse border border-gray-200 text-left">
        <thead>
          <tr>
            <th class="border border-gray-300 px-4 py-2 bg-gray-100 font-semibold">PERTANYAAN</th>
            <th class="border border-gray-300 px-4 py-2 bg-gray-100 font-semibold">JAWABAN</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="border border-gray-300 px-4 py-2">NIP</td>
            <td class="border border-gray-300 px-4 py-2">{{akun.nip}}</td>
          </tr>
          <tr>
            <td class="border border-gray-300 px-4 py-2">Nama Lengkap</td>
            <td class="border border-gray-300 px-4 py-2">{{akun.nama}}</td>
          </tr>
          <tr>
            <td class="border border-gray-300 px-4 py-2">Jabatan</td>
            <td class="border border-gray-300 px-4 py-2">{{akun.jabatan}}</td>
          </tr>
          <tr>
            <td class="border border-gray-300 px-4 py-2">Tim</td>
            <td class="border border-gray-300 px-4 py-2">{{akun.divisi}}</td>
          </tr>
          <tr>
            <td class="border border-gray-300 px-4 py-2">Selesai Voting pada</td>
            <td class="border border-gray-300 px-4 py-2">{{waktu_voting.waktu_vot2}}</td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Tombol Download PDF -->
    <form action="/users/generate/terimakasih" method="POST" class="mt-6 flex justify-end">
      <button type="submit" class="inline-block px-6 py-3 bg-orange-500 text-white font-semibold text-lg rounded-lg shadow-md hover:bg-orange-600 focus:outline-none focus:ring-4 focus:ring-orange-500 focus:ring-offset-2">
        Download PDF
      </button>
    </form>
  {{/if}}
  
</div>