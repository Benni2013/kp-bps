<!-- Preline and ApexCharts -->
<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script src="https://preline.co/assets/js/hs-apexcharts-helpers.js"></script>

<style>
  #hs-doughnut-chart, #hs-doughnut-chart2 { display: block; margin: 0 auto; }
</style>

{{#if ada}}
  <div class="flex flex-col lg:ml-10 lg:mt-8">
    <h1 class="text-4xl font-bold">Dashboard Supervisor</h1>
    <!-- Notifikasi Belum Bisa Dinilai -->
    <div class="mt-8 mx-4 bg-gray-200 rounded-3xl border border-gray-300 shadow-sm p-6 flex justify-center items-center h-96">
      <p class="text-gray-600 text-xl font-medium">Tidak Ada Voting Berjalan</p>
    </div>
  </div>

{{else}}
  <div class="flex flex-col lg:ml-10 lg:mt-8">
    <h1 class="text-4xl font-bold">Dashboard Supervisor</h1>
    <p class="mt-4 text-base leading-6">
      {{akun.divisi}}
      -
      {{pemilihan.nama_pemilihan}}
    </p>

    <div class="flex gap-4 mt-8">
      <!-- First Chart Box -->
      <div class="flex-1 p-4 border rounded-lg">
        <h2 class="text-lg font-semibold mb-4">Status Voting Anggota</h2>
        <div class="h-80 flex flex-col justify-center items-center">
          <div id="hs-doughnut-chart"></div>
          <div class="flex justify-center sm:justify-end items-center gap-x-4 mt-3 sm:mt-6">
            <div class="inline-flex items-center">
              <span class="size-2.5 inline-block bg-green-500 rounded-sm me-2"></span>
              <span class="text-sm text-gray-600 dark:text-neutral-400">
                Sudah Voting
              </span>
            </div>
            <div class="inline-flex items-center">
              <span class="size-2.5 inline-block bg-red-500 rounded-sm me-2"></span>
              <span class="text-sm text-gray-600 dark:text-neutral-400">
                Belum Voting
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Second Chart Box -->
      <div class="flex-1 p-4 border rounded-lg">
        <h2 class="text-lg font-semibold mb-4">Status Penilaian Kriteria</h2>
        <div class="h-80 flex flex-col justify-center items-center">
          <div id="hs-doughnut-chart2"></div>
          <div class="flex justify-center sm:justify-end items-center gap-x-4 mt-3 sm:mt-6">
            <div class="inline-flex items-center">
              <span class="size-2.5 inline-block bg-green-500 rounded-sm me-2"></span>
              <span class="text-sm text-gray-600 dark:text-neutral-400">
                Sudah Isi
              </span>
            </div>
            <div class="inline-flex items-center">
              <span class="size-2.5 inline-block bg-red-500 rounded-sm me-2"></span>
              <span class="text-sm text-gray-600 dark:text-neutral-400">
                Belum Isi
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-between items-center mb-4 mt-8">
    <h2 class="text-lg font-semibold">Status Voting dan Penilaian Kriteria</h2>
  </div>

  <div class="flex flex-col">
    <div class="-m-1.5 overflow-x-auto">
      <div class="p-1.5 min-w-full inline-block align-middle">
        <div class="border rounded-lg overflow-hidden">
          <div class="max-h-96 overflow-y-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50 sticky top-0 z-10">
                <tr>
                  <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase bg-gray-50">NO</th>
                  <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase bg-gray-50">NAMA</th>
                  <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase bg-gray-50">STATUS VOTING TAHAP 1</th>
                  <th scope="col" class="px-6 py-3 text-start text-xs font-medium text-gray-500 uppercase bg-gray-50">STATUS PENILAIAN KRITERIA</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">

                {{#each anggota}}
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">{{inc @index}}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">{{this.nama}}</td>
                    {{#if this.voting1}}
                      <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <button type="button" class="block" aria-haspopup="dialog" aria-expanded="false" aria-controls="hs-ai-invoice-modal" data-hs-overlay="#hs-ai-invoice-modal">
                          <span class="block px-6 py-2">
                            <span class="py-1 px-1.5 inline-flex items-center gap-x-1 text-xs font-medium bg-teal-100 text-teal-800 rounded-full">
                              <svg class="size-2.5" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                              </svg>
                              Sudah Vote
                            </span>
                          </span>
                        </button>
                      </td>
                    {{else}}
                      <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <button type="button" class="block" aria-haspopup="dialog" aria-expanded="false" aria-controls="hs-ai-invoice-modal" data-hs-overlay="#hs-ai-invoice-modal">
                          <span class="block px-6 py-2">
                            <span class="inline-flex items-center gap-1.5 py-0.5 px-2 rounded-full text-xs font-medium bg-red-100 text-red-800">
                              <svg class="size-2.5" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path
                                  d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"
                                />
                              </svg>
                              Belum Vote
                            </span>
                          </span>
                        </button>
                      </td>
                    {{/if}}
                    {{#if this.voting2}}
                      <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <button type="button" class="block" aria-haspopup="dialog" aria-expanded="false" aria-controls="hs-ai-invoice-modal" data-hs-overlay="#hs-ai-invoice-modal">
                          <span class="block px-6 py-2">
                            <span class="py-1 px-1.5 inline-flex items-center gap-x-1 text-xs font-medium bg-teal-100 text-teal-800 rounded-full">
                              <svg class="size-2.5" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                              </svg>
                              Sudah Vote
                            </span>
                          </span>
                        </button>
                      </td>
                    {{else}}
                      <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <button type="button" class="block" aria-haspopup="dialog" aria-expanded="false" aria-controls="hs-ai-invoice-modal" data-hs-overlay="#hs-ai-invoice-modal">
                          <span class="block px-6 py-2">
                            <span class="inline-flex items-center gap-1.5 py-0.5 px-2 rounded-full text-xs font-medium bg-red-100 text-red-800">
                              <svg class="size-2.5" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path
                                  d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"
                                />
                              </svg>
                              Belum Vote
                            </span>
                          </span>
                        </button>
                      </td>
                    {{/if}}
                  </tr>
                {{/each}}

              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}


<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Define the chart options
    const options = {
      chart: {
        type: 'donut',
        height: 230,
        width: 230,
      },
      plotOptions: {
        pie: {
          donut: {
            size: '76%',
          },
        },
      },
      series: [{{v1}}, {{tv1}}],
      labels: ['Sudah Voting', 'Belum Voting'],
      colors: ['#22c55e', '#ef4444'],
      legend: {
        show: false,
      },
      dataLabels: {
        enabled: false,
      },
      stroke: {
        colors: ['#fff'],
        width: 2,
      },
      tooltip: {
        enabled: true,
        theme: 'light',
      },
    };

    const chart1 = new ApexCharts(document.querySelector('#hs-doughnut-chart'), options);
    chart1.render();
  });
</script>
