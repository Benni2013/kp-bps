<body class="bg-gray-50">
    <!-- Main Content -->
    <main class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6 text-center">Profil Anggota</h1>
        <div class="bg-white rounded-xl shadow-sm overflow-hidden w-full mx-auto" style="max-width: 800px;">
            <!-- Profile Header - Using inline style for exact orange color -->
            <div style="background-color: #e67e22;" class="h-20"></div>
            
            <!-- Profile Info -->
            <div class="relative px-6 pb-6">
                <div class="flex flex-col items-center" style="margin-top: -4rem;">
                    <div class="w-32 h-32 rounded-full border-4 border-white overflow-hidden bg-white shadow-lg" style="position: relative; z-index: 10;">
                        <img src="{{akun.foto}}" alt="Profile" class="w-full h-full object-cover">
                    </div>
                    <div class="bg-white pt-16 px-6 text-center" style="margin-top: -4rem; width: 100%; border-radius: 1rem;">
                        <h2 class="text-2xl font-bold">{{akun.nama}}</h2>
                        <p class="text-gray-500">{{akun.nip}}</p>
                    </div>
                </div>

                <!-- Profile Details -->
                <div class="mt-8 grid md:grid-cols-2 gap-6">
                    <div class="flex items-center space-x-3">
                        <div class="bg-blue-100 p-3 rounded-lg">
                            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Jabatan</p>
                            <p class="font-medium">{{akun.jabatan}}</p>
                        </div>
                    </div>

                    <div class="flex items-center space-x-3">
                        <div class="bg-blue-100 p-3 rounded-lg">
                            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Email</p>
                            <p class="font-medium">{{akun.email}}</p>
                        </div>
                    </div>

                    <div class="flex items-center space-x-3">
                        <div class="bg-blue-100 p-3 rounded-lg">
                            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Tim</p>
                            <p class="font-medium">{{akun.divisi}}</p>
                        </div>
                    </div>

                    <div class="flex items-center space-x-3">
                        <div class="bg-blue-100 p-3 rounded-lg">
                            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Jenis Kelamin</p>
                            <p class="font-medium">{{akun.gender}}</p>
                        </div>
                    </div>
                </div>

                <!-- Back Button -->
                <div class="mt-8 text-right">
                    <a href="#">
                        <button 
                        onclick="window.history.back()"
                        type="button" 
                        class="py-2 px-4 bg-white border border-gray-200 text-sm font-medium rounded-lg hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Kembali
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </main>
</body>