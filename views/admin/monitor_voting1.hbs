<!-- Layout utama -->
<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-2 mx-auto">
    {{#if votingStatus.isVotingOpen}}
    <!-- Card Progress untuk Voting Terbuka -->
    <div class="bg-white border border-black rounded-xl shadow-sm p-4 md:p-5 mb-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Progress Voting Tahap 1</h2>
            <button type="button" id="tutupVotingBtn" class="py-2 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-red-600 text-white hover:bg-red-700 disabled:opacity-50 disabled:pointer-events-none">
                <svg class="flex-shrink-0 w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z"/>
                </svg>
                Tutup Voting
            </button>
        </div>

        <!-- Progress Bar -->
        <div class="flex items-center gap-3">
            <div class="flex-1">
                <div class="h-2 w-full bg-gray-200 rounded-full">
                    <div class="h-2 bg-blue-600 rounded-full" style="width: {{votingStatus.progressPercentage}}%"></div>
                </div>
            </div>
            <span class="text-sm font-semibold text-gray-800">{{votingStatus.progressPercentage}}%</span>
        </div>

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-x-16 mt-6 px-8">
            <!-- Total Pemilih -->
            <div class="bg-gray-200 rounded-lg p-4 w-2/3">
                <h3 class="text-gray-500 font-medium">Total Pemilih</h3>
                <p class="text-4xl font-bold text-gray-800">{{votingStatus.totalPemilih}}</p>
            </div>
            <!-- Sudah Vote -->
            <div class="bg-green-200 rounded-lg p-4 w-2/3">
                <h3 class="text-green-600 font-medium">Sudah Vote</h3>
                <p class="text-4xl font-bold text-gray-800">{{votingStatus.sudahVote}}</p>
            </div>
            <!-- Belum Vote -->
            <div class="bg-red-200 rounded-lg p-4 w-2/3">
                <h3 class="text-red-600 font-medium">Belum Vote</h3>
                <p class="text-4xl font-bold text-gray-800">{{votingStatus.belumVote}}</p>
            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="bg-white border border-black rounded-xl shadow-sm">
        <div class="flex justify-between items-center py-3 px-4 border-b">
            <h2 class="text-2xl font-semibold text-gray-800">Status Voting Anggota</h2>
            <button class="flex items-start text-sm font-medium leading-none rounded-lg min-h-[40px] text-slate-700" aria-label="Filter Voting 1">
              <div class="flex overflow-hidden gap-2 justify-center items-center px-4 py-2.5 bg-white rounded-lg border border-gray-300 border-solid shadow-sm">
                <img loading="lazy" src="https://cdn.builder.io/api/v1/image/assets/TEMP/565ef0f7d60ee4cafb3e62c36e3f2b725be54df8b71e3b1813ba0884d857d57b" alt="" class="object-contain shrink-0 self-stretch my-auto w-5 aspect-square"/>
                <span>Filters</span>
              </div>
            </button>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-start text-sm font-semibold text-gray-500">NO</th>
                        <th scope="col" class="px-6 py-3 text-start text-sm font-semibold text-gray-500">NAMA</th>
                        <th scope="col" class="px-6 py-3 text-start text-sm font-semibold text-gray-500">STATUS</th>
                        <th scope="col" class="px-6 py-3 text-start text-sm font-semibold text-gray-500">WAKTU</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {{#each anggota}}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800">{{@index}}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">{{nama}}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            {{#if sudahVote}}
                            <span class="inline-flex items-center gap-x-1.5 py-1.5 px-3 rounded-full text-xs font-medium bg-green-100 text-green-800">Sudah Vote</span>
                            {{else}}
                            <span class="inline-flex items-center gap-x-1.5 py-1.5 px-3 rounded-full text-xs font-medium bg-red-100 text-red-800">Belum Vote</span>
                            {{/if}}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">{{waktu}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{else}}
    <!-- Card Progress untuk Voting Terbuka -->
    <div class="bg-white border border-black rounded-xl shadow-sm p-4 md:p-5 mb-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Progress Voting Tahap 1</h2>
            <button disabled type="button" id="tutupVotingBtn" class="py-2 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-red-600 text-white hover:bg-red-700 disabled:opacity-50 disabled:pointer-events-none">
                <svg class="flex-shrink-0 w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z"/>
                </svg>
                Tutup Voting
            </button>
        </div>

        <!-- Progress Bar -->
        <div class="flex items-center gap-3">
            <div class="flex-1">
                <div class="h-2 w-full bg-gray-200 rounded-full">
                    <div class="h-2 bg-blue-600 rounded-full" style="width: {{votingStatus.progressPercentage}}%"></div>
                </div>
            </div>
            <span class="text-sm font-semibold text-gray-800">{{votingStatus.progressPercentage}}%</span>
        </div>

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-x-16 mt-6 px-8">
            <!-- Total Pemilih -->
            <div class="bg-gray-200 rounded-lg p-4 w-2/3">
                <h3 class="text-gray-500 font-medium">Total Pemilih</h3>
                <p class="text-4xl font-bold text-gray-800">{{votingStatus.totalPemilih}}</p>
            </div>
            <!-- Sudah Vote -->
            <div class="bg-green-200 rounded-lg p-4 w-2/3">
                <h3 class="text-green-600 font-medium">Sudah Vote</h3>
                <p class="text-4xl font-bold text-gray-800">{{votingStatus.sudahVote}}</p>
            </div>
            <!-- Belum Vote -->
            <div class="bg-red-200 rounded-lg p-4 w-2/3">
                <h3 class="text-red-600 font-medium">Belum Vote</h3>
                <p class="text-4xl font-bold text-gray-800">{{votingStatus.belumVote}}</p>
            </div>
        </div>
    </div>

    <!-- Tampilan setelah voting ditutup -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Card Status -->
        <div class="bg-white border border-black rounded-xl shadow-sm ">
            <div class="flex justify-between items-center mb-6 px-2">
                <h2 class="text-2xl font-bold text-gray-800">Status Voting Anggota</h2>
                <button class="mt-2 flex items-start text-sm font-medium leading-none rounded-lg min-h-[40px] text-slate-700" aria-label="Filter Voting 1">
                <div class="flex overflow-hidden gap-2 justify-center items-center px-4 py-2.5 bg-white rounded-lg border border-gray-300 border-solid shadow-sm">
                    <img loading="lazy" src="https://cdn.builder.io/api/v1/image/assets/TEMP/565ef0f7d60ee4cafb3e62c36e3f2b725be54df8b71e3b1813ba0884d857d57b" alt="" class="object-contain shrink-0 self-stretch my-auto w-5 aspect-square"/>
                    <span>Filters</span>
                </div>
                </button>
            </div>
            <div class="relative">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50 sticky top-0 z-10">
                            <tr>
                                <th scope="col" class="px-4 py-2 text-start text-sm font-semibold text-gray-500">NO</th>
                                <th scope="col" class="px-4 py-2 text-start text-sm font-semibold text-gray-500">NAMA</th>
                                <th scope="col" class="px-4 py-2 text-start text-sm font-semibold text-gray-500">STATUS</th>
                                <th scope="col" class="px-4 py-2 text-start text-sm font-semibold text-gray-500">WAKTU</th>
                            </tr>
                        </thead>
                        <div class="overflow-y-auto" style="max-height: calc(5 * 2.5rem);">
                            <tbody class="divide-y divide-gray-200">
                                {{#each anggota}}
                                <tr class="h-10">
                                    <td class="px-4 py-2 whitespace-nowrap text-xs font-medium text-gray-800">{{@index}}</td>
                                    <td class="px-4 py-2 whitespace-nowrap text-xs text-gray-800">{{nama}}</td>
                                    <td class="px-4 py-2 whitespace-nowrap text-xs">
                                        {{#if sudahVote}}
                                        <span class="inline-flex items-center gap-x-1.5 py-1 px-2 rounded-full text-xs font-medium bg-green-100 text-green-800">Sudah Vote</span>
                                        {{else}}
                                        <span class="inline-flex items-center gap-x-1.5 py-1 px-2 rounded-full text-xs font-medium bg-red-100 text-red-800">Belum Vote</span>
                                        {{/if}}
                                    </td>
                                    <td class="px-4 py-2 whitespace-nowrap text-xs text-gray-800">{{waktu}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </div>
                        
                    </table>
                </div>
            </div>
            
        </div>

        <!-- Card Hasil Voting -->
        <div class="bg-white border border-black rounded-xl shadow-sm p-4 md:p-5">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-gray-800">Hasil Voting Tahap 1</h2>
            </div>
            <div class="space-y-4">
                {{#each hasilVoting}}
                <div class="flex items-center gap-4">
                    <div class="flex-1">
                        <div class="text-sm font-medium text-gray-800">{{nama}}</div>
                        <div class="w-full h-2 bg-gray-200 rounded-full mt-2">
                            <div class="h-2 bg-blue-600 rounded-full" style="width: {{percentage}}%"></div>
                        </div>
                    </div>
                    <div class="text-sm font-medium text-gray-600">{{votes}} votes</div>
                </div>
                {{/each}}
            </div>
            
        </div>
        <div class="lg:col-span-2 flex justify-end ">
            <a href="/admin/kandidat_penilaian_kriteria" 
            class="inline-flex items-center gap-x-2 py-2.5 px-4 text-sm font-semibold rounded-lg border border-transparent bg-black text-white hover:bg-gray-900 disabled:opacity-50 disabled:pointer-events-none">
                Lihat Detail Hasil Voting Tahap 1
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
            </a>
        </div>
    </div>
    {{/if}}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const tutupVotingBtn = document.getElementById('tutupVotingBtn');

    if (tutupVotingBtn) {
        tutupVotingBtn.addEventListener('click', async function() {
            if (confirm('Apakah Anda yakin ingin menutup voting?')) {
                try {
                    const response = await fetch('/admin/tutup_voting1', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    if (response.ok) {
                        const data = await response.json();
                        alert(data.message);
                        window.location.reload();
                    } else {
                        alert('Gagal menutup voting');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Terjadi kesalahan saat menutup voting');
                }
            }
        });
    }
});
</script>