<script>
// Validasi file
function validateFile(input) {
  const file = input.files[0];
  const errorElement = document.getElementById('file-error');
  
  // Reset error
  errorElement.classList.add('hidden');
  
  if (file) {
    // Validasi tipe file
    const validTypes = ['image/jpeg', 'image/jpg', 'image/png'];
    if (!validTypes.includes(file.type)) {
      errorElement.textContent = 'Hanya file gambar (JPG, JPEG, PNG) yang diperbolehkan';
      errorElement.classList.remove('hidden');
      input.value = '';
      return false;
    }
    
    // Validasi ukuran (max 5MB)
    if (file.size > 5 * 1024 * 1024) {
      errorElement.textContent = 'Ukuran file maksimal 5MB';
      errorElement.classList.remove('hidden');
      input.value = '';
      return false;
    }
  }
  
  return true;
}

// Update handleSubmit function
async function handleSubmit(event) {
  event.preventDefault();
  const form = event.target;

  // Validasi tim
  const divisi = document.getElementById('divisi');
  if (divisi.value === "") {
    //document.getElementById('divisi-error').classList.remove('hidden');
    divisi.focus();
    return;
  }
  
  // Debug: log data yang akan dikirim
  const formData = new FormData(form);

  try {
    const response = await fetch(form.action, {
      method: 'POST',
      body: formData,
    });

    const result = await response.json();

    if (result.success) {
      const modal = document.getElementById('successModal');
      modal.classList.remove('hidden');
      modal.classList.add('block');
      
      // setelah 1 detik, redirect ke halaman manajemen_kriteria
      setTimeout(() => {
        window.location.href = '/admin/manajemen_anggota';
      }, 1000);
    } else {
      // Tampilkan pesan error
      const errorDiv = document.getElementById('error-message');
      const errorSpan = document.getElementById('error-text');
      errorSpan.textContent = result.message;
      errorDiv.classList.remove('hidden');
      console.error('Create failed:', result.message);
    }
  } catch (error) {
    console.error('Error:', error);
  }
}

</script>