<!-- Content -->
<main class="p-8">
    <div class="mb-8">
        <div class="flex justify-between items-center mb-4">
            <div class="flex flex-col mb-4">
                <h2 class="text-2xl font-bold">Hasil Penilaian Kriteria</h2>
                <p class="text-gray-500 italic mt-1">{{pemilihanTitle}}</p>
            </div>
            
            <button type="button" 
              onclick="window.location.href='/admin/generate/{{idPemilihan}}/laporan_hasil_pemilihan'"
              class="inline-flex items-center px-4 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                </svg>
                Download Laporan
            </button>
        </div>

        <!-- Results Table -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden pt-4">
            <table class="w-full">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Posisi</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nama/NIP</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Jumlah Poin</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Rata-rata</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {{#each hasilKriteria }}
                        <tr>
                            <td class="px-6 py-4">{{posisi}}</td>
                            <td class="px-6 py-4">
                                <div>{{nama}}</div>
                                <div class="text-sm text-gray-500">{{nip}}</div>
                            </td>
                            <td class="px-6 py-4">{{totalPoin}}</td>
                            <td class="px-6 py-4">{{rataRata}}</td>
                        </tr>
                    {{/each}}
                    
                </tbody>
            </table>
        </div>

        <!-- Action Button -->
        <div class="flex justify-between mt-6">
            <a href="/admin/pemilihan_berlangsung/{{idPemilihan}}/monitor_voting2" >
                <button 
                type="button" 
                class="bg-gray-300 hover:bg-gray-400 text-black px-6 py-3 rounded-lg mr-4">
                Kembali
                </button>
            </a>

            <a href="/admin/pemilihan_berlangsung/{{idPemilihan}}/kandidat_terpilih" class="inline-flex items-center px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-800">
                Lihat Pegawai Terbaik
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path d="M9 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>
    </div>
</main>

